extends layout 

block content   
    h2= title 
    form(action="" method="POST" enctype="multipart/form-data" class="create") 
      div(class="form-label") 
        label(for="name") Name: 
        input#name(type="text", placeholder="Name of item" name="name" required="true" value=(undefined===item ? "" : item.name) ) 
      div(class="form-label") 
        label(for="description") Description: 
        textarea#description(name="description" cols="30" rows="10" required="true")=undefined=== item ? "" : item.description
      div(class="form-label") 
        label(for="price") Price (GP): 
        input#price(type="number" placeholder="Unit price of item" name="price" required="true" value=(undefined===item ? "" : item.price)) 
      div(class="form-label") 
        label(for="category") Category: 
        select#category(type="select" name="category" required='true') 
          for category in categories
              option(value=category._id) #{category.name}
      div(class="form-label") 
        label(for="image") Image: 
        input#name(type="file" name="image" value=(undefined===item ? "" : item.image) )
      button#submit(type="submit") Submit
    if errors 
      ul 
        for error in errors 
          li= error.msg
